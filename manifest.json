{
  "manifest_version": 2,

  "name": "微信Auto",
  "description": "微信Web自动发送消息",
  "version": "1.0",

  "permissions": [
    "http://*/*","https://*/*", "contextMenus", "tabs", "storage", "cookies", "alarms", "activeTab"
  ],
  "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
  },
  "background": {
       "scripts": ["js/jquery.min.js", "js/background.js"]
  },
 "content_scripts": [{
      "matches": [
          "*://wx.qq.com/*"
      ],
      "js": ["js/jquery.min.js","js/cookie.js","js/init.js"],
      "run_at": "document_idle",
      "css": []
  }],
  "browser_action": {
    "default_title":"我是大白,你的微信帮手",
    "default_icon": "icon16.png",
     "default_popup": "popup/popup.html"
  }
}